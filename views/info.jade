extends ./layout

block footer
  script(src='/assets/js/underscore-min.js')
  script(src='/assets/js/jquery-1.8.2.min.js')
  script(src='/assets/js/jquery-ui-1.9.1.custom.min.js')
  script(src='/assets/js/index.js')

block content

  include _log_out

  div(id='sidebar')
    div(id='control')
      - for x in screen_names.list
        div.screen_name
          div.name
            span.label As:
            span.value &nbsp;#{x}
          div.add_to_address_book
            input(type='checkbox', value='add_to_address_book')
            span Add To Address Book
          div.sub_e
            input(type='checkbox', value='sub_e')
            span Subscribe (Everything)
          div.sub_i
            input(type='checkbox', value='sub_i')
            span  Subscribe (Important News Only)
          div.hate
            input(type='checkbox', value='hate')
            span Block!

  div(id='intro')
    h2 #{life_name}
    div
      span.label Name:&nbsp;
      span Go 99
      
    div
      span.label OKdoki screen-name:&nbsp;
      span #{life_name}


  div.block(id='about')
    h2 About Me:
    div.body
      | Nothing yet. I'm a very private person.

  div.block(id='qa')
    h2 Q&A:
    div.body
      | Nothing yet.
      if logged_in
        div.fieldset
          textarea
          button Ask

  div.block(id='boos')
    h2 Cheers & BOOs:
    div.body
      | Nothing yet.
      if logged_in
        div.fieldset
          select
            option Boo!
            option Yay!
        div.fieldset
          textarea
        div.fieldset
          button Save

  div.block(id='latest')
    h2 Latest:
    div.body
      | Nothing yet.
