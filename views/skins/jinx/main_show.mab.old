div.manual! {

  h3 'The Manual'

  ul.manual_tabs! {
    onclick_action = "Swiss.vertical_tab.select(this); return false;"
    li.tab_unselected { a('Italics', :href=>'#manual_italics', :onclick=>onclick_action) }
    li.tab_unselected { a('Bold', :href=>'#manual_bold', :onclick=>onclick_action) }
    li.tab_unselected { a('Underline', :href=>'#manual_underline', :onclick=>onclick_action) }
    li.tab_unselected { a('YouTube', :href=>'#manual_youtube', :onclick=>onclick_action) }
    li.tab_unselected { a('Vimeo', :href=>'#manual_vimeo', :onclick=>onclick_action) }
    li.tab_unselected { a('Flickr', :href=>'#manual_flickr', :onclick=>onclick_action) }
    li.tab_unselected { a('Regular Photos', :href=>'#manual_regular_photos', :onclick=>onclick_action) }
  }



  div.step.tab_unselected.manual_italics! {
    a('',:name=>'manual_italics')

    div.details {
      p %~ To slant your text, surround it with stars and the letter "i" at the very beginning. ~
      div.write_this {
        div.header { span 'Write this...' }
        div.content {
          p %~  /Spring is here./  ~ 
        }
      }
      div.displayed_as {
        div.header { span 'It will be displayed like this...' }
        div.content {
            p { %~ <i> Spring is here. </i> ~ }
        }
      }
    } # div.details

  } # manual_italics!


  div.step.tab_unselected.manual_bold! {
 
    a('',:name=>'manual_bold')
    
    div.details {
      p %~ Make your text bold by surrounding it with stars and the letter "b" at the very beginning. ~
      div.write_this {
        div.header { span 'Write this...' }
        div.content {
          p{ %~  *Nippon Robotics Inc.* ~ } 
        }
      }
      div.displayed_as {
        div.header { span 'It will be displayed like this...' }
        div.content {
           p {   %~  <strong> Nippon Robotics Inc. </strong>  ~  }
        }
      }
    } # div.details

  } # manual_italics!

  div.step.tab_unselected.manual_underline! {
    a('', :name=>'manual_underline')
    div.details { p { 'Not implemented yet. <br /><br /><br />' } }
  } # manual_underline

  div.step.tab_unselected.manual_youtube! {
    a('', :name=>'manual_youtube')
    div.details { p { 'Not implemented yet. <br /><br /><br />' } }
  }

  div.step.tab_unselected.manual_vimeo! {
    a('', :name=>'manual_vimeo')
    div.details { p { 'Not implemented yet. <br /><br /><br />' } }
  }

  div.step.tab_unselected.manual_flickr! {
    a('', :name=>'manual_flickr')
    div.details { p { 'Not implemented yet. <br /><br /><br />' } }
  }

  div.step.tab_unselected.manual_regular_photos! {
    a('', :name=>'manual_regular_photos')
    div.details { p { 'Not implemented yet. <br /><br /><br />' } }
  }


} # manual!
