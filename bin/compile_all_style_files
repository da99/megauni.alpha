#!/usr/bin/env bash
# -*- bash -*-
#
#!/usr/bin/env node
# -*- js   -*-
#
files="$@"
set -u -e -o pipefail



if [[ -z "$files" ]]
then
  files=$(find ./Client -iregex '.*\.stylus')
fi

for i in $files
do
  stylus $i
  new_file="$(echo $i | sed 's/.stylus$/.css/')"
  mv ${new_file}us ${new_file}
  echo $new_file
done
