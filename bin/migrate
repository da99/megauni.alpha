#!/usr/bin/env bash
# -*- bash -*-
#
cmd="$1"
set -u -e -o pipefail

mods=( Customer )

bin="../../node_modules/duck_duck_duck/bin/duck_duck_duck"

if [[ "$cmd" == "" ]]
then
  cmd="up"
fi

if [[ "$cmd" == "create" ]]
then

  cd "Server/$2"
  $bin create $3
  cd ../..

else

  for m in "${mods[@]}"
  do
    cd "Server/$m"
    $bin $@
    cd ../..
  done

fi

