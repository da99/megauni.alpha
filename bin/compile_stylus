#!/usr/bin/env bash
# -*- bash -*-
#
#!/usr/bin/env node
# -*- js   -*-
#
file="$1"
set -u -e -o pipefail



if [[ -z "$file" ]]
then
  files=$(find ./Public -type f -iregex '.*\.styl' \( ! -iname '_*\.styl' \) )
  for f in $files
  do
    stylus $f
  done
else
  if [[ "$file" =~ "Public/css/_" ]]
  then
    base="$(basename $file)"
    base=${base#.styl}
    files=$(egrep -ir --include=*.{styl} "$base" ./Public)
    for f in $files
    do
      stylus $f
    done
  else
    stylus $file
  fi
fi

