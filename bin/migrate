#!/usr/bin/env bash
# -*- bash -*-
#
# Examples for development:
#
#   bin/migrate reset
#   bin/migrate reset MODEL
#
action="$1"
shift

model="$1"
shift

other="$@"

set -u -e -o pipefail

. bin/env
. bin/model_list


if [[ -z "$action" ]]
then
  action="up"
fi


case "$action" in
  create)
    if [[ ! "${mods[@]}" == *"$model"* ]]
    then
      echo "$model not in list."
      exit 1
    fi

    bin/migrate_create "$model" "$@"
    ;;

  beginning_data)
    bin/migrate_beginning_data
    ;;

  list)
    echo "not ready"
    echo 1
    ;;

  reset)
    bin/migrate down "$model"
    bin/migrate up   "$model"
    if [[ -z "$model" ]]; then
      ALLOW_BANNED_SCREEN_NAME=true bin/migrate beginning_data
    fi

    echo "
===== DONE =====
"
    ;;

  up)
    if [[ -z "$model" ]]
    then

      for m in ${mods[@]}
      do
        echo "=== Migrating: up $m"
        bin/migrate_up $m
        echo ""
      done
    else
      bin/migrate_up $model
    fi
    ;;

  down)
    if [[ -z "$model" ]]
    then

      # === Ensure dev machine.
      if [ ! -n "${IS_DEV+x}" ]
      then
        echo "This is not a dev machine."
        exit 1
      fi

      # === Reverse list
      for m in ${rev_mods[@]}
      do
        echo "=== Migrating: down $m"
        bin/migrate_down $m
        echo ""
      done

    else
      bin/migrate_down $model
    fi
    ;;

  *)
    echo "Unknown command: $action"
    exit 1
    ;;

esac

