#!/usr/bin/env bash
# -*- bash -*-
#

set -e

if [ -z "$NO_DB_RESET" ];
then bin/migrate reset_with_customer;
else
  echo "Skipping db reset";
fi

set -u
echo ""

bin/mocha_file test/River.js test/Validate.js test/SQL.js test/Redis.js test/Screen_Name.js "$@"
