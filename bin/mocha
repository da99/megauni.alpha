#!/usr/bin/env bash
# -*- bash -*-
#

set -e

if [ -z "$NO_DB_RESET" ];
then bin/migrate reset_with_customer;
else
  echo "Skipping db reset";
fi

set -u
echo ""

bin/mocha_file \
  test/IM.js    \
  test/PG.js    \
  test/Redis.js    \
  test/River.js    \
  test/SQL.js      \
  test/Validate.js \
  test/Screen_Name.js \
  test/Customer.js    \
  "$@"

