html
  height:100%;
  padding: 0px;
  margin: 0px;

body
  height:100%
  padding: 0 0 30px 0
  margin: 0

label
  display: block

body.w500_plus #Me
  background: transparent
  text-align: center
  h3
    padding: 5px 0 0 0
    font-size: 230%
    width: 90%
    margin: 0 auto
  div.content
    width: 90%
    padding-left: 0
    padding-right: 0
    margin: 0 auto

#Items
  text-align: center
  padding: 0
  background: rgba(255,255,255,0.25)
  height: 100%;
  div.content
    margin: 0 auto
    max-width: 1000px
    text-align: left
    div.edit_this
      padding: 8px 0 0 8px
      div.edit
        a:link
          text-transform: uppercase
      div.success_msg
        display: none
        font-style: italic
        background: $light_yellow
        padding: 6px 10px 8px 10px
        text-align: center
      form
        padding: 10px 0 20px 10px
  textarea
    width: 95%
    min-height: 500px
    font-size: 140%
  div.title input
    width: 95%
  button
    margin: 0 15px 0 0

#The_Page_Content
  padding: 0 10px 30px 23px
  line-height: 1.6
  font-size: 130%
  h3
    margin: 0
    font-weight: bold
    text-transform: none
    margin-left: -10px
    font-size: 90%
    padding: 10px 0 0 0
  div.p
    padding: 5px 0 7px 0

#Update_Page
  display: none

#Create, #Creates
  display: none

#Creates
  label, span.value
    display: inline
    padding: 0 5px 0 0



body.w700_plus
  #Items
    background: rgba(255,255,255,0.5)
    margin: 20px 30px 30px 30px




