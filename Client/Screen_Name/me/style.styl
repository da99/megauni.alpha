body
  text-align: center
  padding: 0 0 100px 0
  background: #fafafa
  background: #fafafa url("/App/img/wood_pattern.png")

h4
  color: $grey_on_light

form
  text-align: left

  div.field
    span.label, label
      font-weight: normal
      color: $grey_on_light
    input[type="text"]
      font-size: 190%

  textarea
    min-width: 97%
    max-width: 97%
    max-height: 250px
    min-height: 100px
    width: 97%

  label
    display: block

  input[type="text"]
    width: 99%

select, option
  font-size: 120%


div.box
  padding: 0
  margin: 0 0 10px 0
  width: 98%
  padding-bottom: 15px
  background: $glass_white
  h3
    padding: 0
    text-align: center
    color: #525252
    font-size: 80%
  div.content
    padding: 10px

div.col
  width: 50%
  float: left



#Me
  padding: 20px 0 10px 10px
  text-align: center
  h3
    font-family: 'Libertinage', $serif
    font-size: 280%
    font-style: normal
    text-transform: none
    text-shadow: 1px 1px 1px lighten(#fff, 90%);
    padding: 10px 5px 10px 10px
    width: 90%
    margin: 0 auto
  div.content
    padding: 3px 5px 4px 15px
    color: #000
    width: 90%
    margin: 0 auto
    border-bottom: 3px double lighten(#000, 40%)

#Control_Panel
  overflow: auto
  #Other_Screen_Names
    background: $light_yellow
    padding: 10px
    div.screen_names
      ul
        margin: 0
        padding: 0
        display: inline
      li
        list-style: none
        margin: 0
        display: inline
      li:after
        content: ", "
      li:last-child:after
        content: ""

#Other_Screen_Names
  display: none
  padding:  0 0 10px 0

#Boxs
  overflow: auto

#Stage
  width: 49%

#Interact
  width: 49%

#New_Life
  div.content
    span.label
      padding: 0 10px 0 0
    input[type="text"]
      font-size: 190%
      margin-right: 10px
    div.fields, div.screen_name, div.buttons
      display: inline-block

#Create
  background: rgba(0,0,0,0.6)
  div.link
    padding: 0 2px $padding_create 0
  a:link
    padding: 1px $padding_create 5px $padding_create
  div.loading
    background-color: #fff
    padding-top: 3px
    padding-bottom: 3px
  div.success
    background: #fff
    padding: 3px $padding_create
  div.errors
    color: lighten(#F50000, 50%)
    padding: 3px $padding_create


#Create_Boxs
  display: none
  padding: 10px 0 0 0
  overflow: auto
  div.box
    margin: 0 0 0 10px
    h3
      border-radius: 0
      display: block
      text-align: left
      padding-left: 10px
      color: $yellow_med
      background: rgba(0,0,0,0.8)
    div.content
      color: $yellow_med
      background: rgba(0,0,0,0.8)
      label, span.label
        color: $yellow_med
      div.field
        span
          display: block
          text-transform: none
        input
          width: 98%
      div.buttons
        text-align: right

#Follow
  #Delete_Follow
    display: none
  #Create_Follow
    display: block
  padding: 0
  div.content
    form
      text-align: center
    #Delete_Follow
      border: 1px dashed $samar_red
      border-width: 1px 0
      padding: 6px 0 10px 0
      border: 0
      div.intro
        border: 0
        padding: 0 4px 10px 4px
        font-family: $serif
        font-style: italic
        color: lighten(#000, 40%)

  &.is_following
    #Delete_Follow
      display: block
    #Create_Follow
      display: none
    h3
      display: none
    div.content
      form
        text-align: center

#Create_Website
  display: none

#Write_Message
  span.label
    display: block
  div.buttons
    text-align: right
    button
      margin: 0 15px 0 0

#Message_Board
  div.msgs
    div.msg
      border-radius: 3px 0 0 3px
      background: #fff
      padding: 4px 2px 4px 5px
      margin: 0 0 10px 0
      span.author
        color: $dark_blue
        font-weight: bold
        font-size: 90%
        font-style: italic
      span.said
        color: $grey_on_light
        font-style: italic
      div.content
        font-size: 120%
        font-family: $serif
    div.official
      background: $light_yellow
      font-style: italic
    div.me_chat_msg, div.me_msg
      background: $light_yellow
    div.error_msg
      color: $red



#Folders
  div.content
    ul.folders
      list-style: none
      margin: 0
      padding: 0
      li
        margin: 0
        padding: 0
    div.folders
      div.folder
        padding: 3px 15px 5px 8px
        font-size: 140%
        font-weight: bold
        a.open
          font-size: 90%
        span.title
          padding: 0 0 0 3px
    form
      span.label
        display: block
      input[type="text"]
        font-size: 190%
        width: 95%

