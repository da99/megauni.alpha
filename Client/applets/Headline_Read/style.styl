
@import "../../css/common"

#Write
  div.content
    padding-top: 0
  div.to_room, div.as_this_life
    float: left
    padding-right: 6px
  div.menu
    display: inline-block
    padding-left: 5px
  div.buttons
    text-align: center


#Messages
  padding-bottom: 150px
  div.msg
    background: #fff
    border-radius: 0 5px 5px 0
    margin: 0 0 15px 0
    padding: 2px 5px 6px 5px
    div.meta
      span.name
        color: #0051AF
        font-weight: bold
      span.room_name
        color: #00A0BD
        font-weight: bold
      span.said, span.by
        color: #545454
    div.body
      font-size: 120%

  div.official, div.error
    background: $yellow
    padding: 4px 4px 4px 5px
    font-family: $serif
  div.error
    background: #fff
    color: $samar_red
    font-family: $sans-serif
    padding-bottom: 6px
    div.body
      font-size: 110%
  div.me
    background: $glass_white_med
    border: 1px solid #fff
    border-width: 1px 1px 1px 0

