#!/usr/bin/env bash
# -*- bash -*-
#
# Examples:
#    bin/model create Chat
#    bin/model file   Chat Chat_Room_Fav
#

cmd="$1"
class="$2"
instance="$(echo $class | tr '[A-Z]' '[a-z]')"

set -u -e -o pipefail

compile_all () {
  mkdir -p Server/$class/model


  tmpl="Server/Ok/templates/model.rb"
  compile_template model "model.rb"

  tmpl="Server/Ok/templates/model.action.rb"
  compile_template create "model/create.rb"
  compile_template read   "model/read.rb"
  compile_template update "model/update.rb"
  compile_template trash  "model/trash.rb"
  compile_template delete "model/delete.rb"

  tmpl="Server/Ok/templates/routes.rb"
  compile_template route "routes.rb"

}

template () {
  action="$1"
  new_file="Server/$class/$2"

  if [[ -f "$new_file" ]]
  then
    echo "=== already exists: $new_file"
  else
    sed "s/MODEL/$class_name/g"  "$tmpl" >> "$new_file"
    sed "s/!model/$instance/g"   -i "$new_file"
    sed "s/!action/$action/g"    -i "$new_file"
    echo "=== created: $new_file"
  fi

}


case "$cmd" in
  create)
    compile_all
    ;;

  *)
    echo "Unknown command: $@"
    exit 1
    ;;

esac


