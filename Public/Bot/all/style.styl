@import "../../css/_common"

body
  padding: 0 0 100px 0
  background: #f1f1f1 url("/img/patterns/escheresque/escheresque.png")

#Sidebar
  float: left
  width: 35%
  padding : 0 0 10px 0
  margin: 10px
  min-width : 250px
  border-radius: 4px
  div.box
    text-align: center
    h3
      padding-top: 5px
      text-align: left
      padding-left: 10px
    div.content
      padding: 0 10px 5px 10px
      border-bottom: 1px dashed #ccc
      width: 90%
      margin: 0 auto
      text-align: left
  div.box:last-child
    div.content
      border: 0
#Me_Intro
  text-align: center
  padding    : 15px 0 15px 0
  border-radius: 4px 4px 0 0
  background: #000 url("/img/patterns/escheresque_ste/escheresque_ste.png") repeat -10px 0
  background: $yellow url("/img/busynoise/orange_yellow.gif") repeat -10px 0
  border-bottom: 7px solid #B0C460
  margin: 0
  div.the_life_of, div.what_am_i
    font-family : 'Libertinage', $serif
    font-size   : 140%
    color : $samar_red
    font-weight: bold
  h3
    text-align     : center
    font-family    : 'Libertinage', $serif
    font-size      : 200%
    font-style     : normal
    font-weight: normal
    text-transform : none
    text-shadow    : 1px 1px 1px darken($avacado, 60%)
    padding        : 0
    line-height    : 1.0em
    color: #fff
    font-weight: bold
  div.content
    padding: 3px 0 4px 0
    color: #000
    width: 90%
    margin: 0 auto
    border-bottom: 1px dotted darken(#fff, 60%)

div.bot
  background: #fff
  padding: 0.3em 0.5em 0.5em 0.5em
  margin: 0.5em
  border-radius: 0.3em
  div.header
    a.name
      display: inline-block
      margin: 0 0 0 5px
  div.loading
    background-position: 13px 3px
    a.on, a.off
      visibility: hidden

#bot_list
  float: left


div.box
  padding: 0
  background: #fff
  h3
    padding: 0 5px
    font-size: 80%
    font-weight: bold
    font-style: normal
    color: #F1684E
    color: $pink
    text-align: right
    span.sub
      color: #909090
      padding-left: 5px
  div.content
    padding: 0 5px 0 10px



