#!/usr/bin/env bash
# -*- bash -*-
#
set -u
set -e

PORT=5001
echo ""
echo "Reseting db..."
bin/migrate reset

echo ""
echo "Running tests..."
NODE_ENV=production mocha --colors "$@"

echo ""
echo "Starting server on $PORT..."
PORT=$PORT bin/start &

echo ""
echo "Running phantomjs/casperjs tests..."
PORT=$PORT casperjs test/casper.js $PORT


echo ""
echo "Sending SIGTERM to server..."
pkill -f "lib/app.js $PORT"

echo ""



