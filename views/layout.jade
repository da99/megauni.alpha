
block vars
if typeof(body_css) === 'undefined'
  - var body_css = ''

if typeof(logged_in) != 'undefined' && logged_in
  - body_css += ' logged_in'
else
  - body_css += ' not_logged_in'

!!! 5
html(lang='en')
  head
    title= title
    link(rel='shortcut icon', href='/favicon.ico')
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(href="/assets/css/_base.css", rel='stylesheet', media='screen')
    link(href="/assets/css/#{view_name}.css", rel='stylesheet', media='screen')
  body(class="#{body_css.trim()}")
    block content
    block footer
