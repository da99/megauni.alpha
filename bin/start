#!/usr/bin/env bash
# -*- bash -*-
#
#
set -u -e -o pipefail

pid="$(bin/pid)"

if [[ -n "$pid" ]]
then
  echo "Stopping server..."
  bin/stop
fi

dev_opts=''
if [[ -n "$IS_DEV" ]]
then
  dev_opts="-D"
fi

echo "Starting server..."
bundle exec unicorn $dev_opts -p $PORT -E $RACK_ENV configs/config.ru


