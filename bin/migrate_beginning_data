#!/usr/bin/env ruby
#
#

ADMIN_PSWD = if ENV['IS_DEV']
               "i hate this"
             else
               puts "Enter a password: "
               STDIN.readline
             end

require './Server/Okdoki/model'

%w{ Customer Screen_Name }.each { |m|
  require "./Server/#{m}/model"
}

c = Customer.create(
  :ip                =>'127.0.0.1',
  :pass_word         =>ADMIN_PSWD,
  :confirm_pass_word =>ADMIN_PSWD,
  :screen_name       =>'ted_'
)

c.create :screen_name, 'machine_publisher'

puts %~
=== Created: ===
#{c.screen_names.map(&:screen_name).join "\n"}
================
~


