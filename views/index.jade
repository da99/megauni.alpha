extends ./layout

block footer
  script(src='/assets/js/underscore-min.js')
  script(src='/assets/js/jquery-1.8.2.min.js')
  script(src='/assets/js/jquery-ui-1.9.1.custom.min.js')
  script(src='/assets/js/_base.js')
  script(src='/assets/js/Forms.js')
  script(src='/assets/js/index.js')

block content

  include _log_out

  if !logged_in
    div(id='forms')
      p(id='show_sign_in')
        a(href="#sign_in") Log-In

      div.form(id='sign_in')
        h2 Log-in
        form(id='form_sign_in', action='/sign-in', method='post')
          div.fields
            div.field.screen_name
              div
                span.label Screen name:
              input.field(type='text', name="screen_name", value="")
            div.field.passphrase
              div
                span.label Passphrase
              input.field(type='password', name="passphrase", value="")
            div.field.buttons
              input.field(type='hidden', name="_csrf", value="#{token}")
              button.submit(id='submit_form_sign_in') Log-In
              a.cancel(href="#cancel") Cancel


      p(id='or_create_account')
        | ~ or ~

      div.form(id='create_account')
        h2 Create Account
        form(id='form_create_account', action='/create-account', method='post')
          div.fields
            div.field.screen_name
              div
                span.label Screen name:
              input.field(type='text', name="screen_name", value="")
            div.field.passphrase
              div
                span.label Passphrase:
              input.field(type='password', name="passphrase", value="")
            div.field.confirm-passphrase
              div
                span.label Confirm Passphrase:
              input.field(type='password', name="confirm_passphrase", value="")
            div.field.email
              div
                span.label Email:
                span.value  (in case you forget your password)
              input.field(type='text', name="email", value="")
            div.field.buttons
              input.field(type='hidden', name="_csrf", value="#{token}")
              button.submit(id='submit_form_create_account') Create Account


    h1.title
      | <span class="main">ok</span><span class="sub">doki</span>

    div(id='intro')
      p
        | <span class="about">WWW Chat</span>
        | <br />
        | A brand-new way to <strong>chat</strong> with your friends
        | <br />
        | even when you are busy.

    div.intro

      div(id='footer')
        p
          | (c) 2012-2013 OKdoki.com. Some rights reserved.
        p
          | All other copyrights belong to their respective owners.
        p
          | Photo:
          | Bikes in Montreal by
          | <a href="http://www.dreamstime.com/bikes-in-a-row-free-stock-photos-imagefree84388">Galina Barskaya</a>.


  else
    div(id='intro')
      include _keywords

      h2 Welcome, #{screen_names.join(', ')}.

    div.block(id='what_you_can_do_now')
      h2 What you can do now:
      div.body
        | You can go into chat:&nbsp;
        a(href="/chat") okdoki.com/chat

    div.block(id='homepages')
      h2 Your homepages:
      div.body
        ul
        for x in screen_names
          li <a href="/info/#{x}">okdoki.com/info/#{x}</a>

    div.block(id='create_screen_name')
      h2 Create Another Screen Name:
      div.body
        p
          | Create a screen name for different aspects of your life:
          | <span class="label">work</span>,
          | <span class="label">school</span>,
          | <span class="label">friends</span>,
          | etc.
          | It helps keep your lifes private and better organized.

        form(id='form_create_screen_name', action='/create/screen_name', method='post')
          div.fields
            div.field.screen_name
              input(type='text', name='screen_name')
            div.field.buttons
              input.field(type='hidden', name="_csrf", value="#{token}")
              button.submit(id='submit_form_create_screen_name') Create

    div.block(id='trash_e')
      h2 Delete Account:
      div.body
        p
          | All your&nbsp;
          span.label screen-names
          |  and posts will be deleted within 48 hours.
          | You have this time to change your mind.
          | After 48 hours, it will be as if you never existed
          | on OKdoki.com.
        div.buttons
          button Delete Account Forever

    div.block(id='contacts')
      h2 Contacts List:
      div.body
        - for x in screen_names
          div.contact
            a(href="/info/#{x}") @#{x}
            span.value : #{x}

    div.block.loading(id='latest')
      h2 News Feed:
      div.body

        div.item.please_wait
          | Please wait. Your news is 
          | being retrieved.




